.profile
	width 100%
	display flex
	flex-direction column
	min-height 600px

	&__info
		display flex
		justify-content flex-start
		align-items flex-start

		&-name
			font-size 48px
			font-weight 600
			color $color-text
			margin-left $padding
			max-width 300px
			text-overflow()

	&__social
		display flex
		margin-top $padding

		& .ui-connect:not(:first-child)
			margin-left $padding

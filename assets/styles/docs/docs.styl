.docs
	width 100%
	display flex
	flex-direction column

	&__title
		color $color-text-inversion
		font-size 20px
		font-weight 900

	&__search
		width 250px
		margin-top 20px
		margin-bottom 40px

	&__card
		height 260px
		background-color #000000
		color $color-text
		padding 0
		border $border

		& .ant-card-head
			border-bottom $border

			&-title
				color $color-text

		& a, & .ant-card-body
			display flex
			justify-content center
			align-items center

		& a
			height 100px
			width 100%
			margin-top 20px

		& img
			max-height 130px
			width auto
			max-width 100%
			transition opacity $transition

		&:hover img
			opacity .6

.login
	flex-center()
	width 100%
	height 100%
	position relative

	&__background
		position absolute
		height 100%
		width 100%
		object-fit cover

		&-img, &-gradient
			width 100%
			height 100%

		&-img
			object-fit cover
			position absolute

		&-gradient
			background radial-gradient(124.62% 50% at 50% 50%, rgba(15, 15, 15, 0) 0%, #0F0F0F 100%), rgba(15, 15, 15, 0.64);
			backdrop-filter blur(1px)
			position relative

